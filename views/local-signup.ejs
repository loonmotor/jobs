<form method="POST" id="signup-form">
	<input type="text" name="name" id="name">
	<input type="text" name="email" id="email">
	<input type="password" name="password" id="password">
	<input type="submit" value="Sign Up" id="submit">
</form>

<script>

	var
		formData = ''
		, xhr = new XMLHttpRequest()
		, url = 'http://localhost:3008/auth/local-signup';

	xhr.onreadstatechange = function () {
		if (xhr.readyState == 4 && xhr.status == 200) {
			console.log(xhr.response);
		}
	}

	var submitForm = function (formData) {
		xhr.open('POST', url);
		xhr.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
		xhr.send(formData);
	}

	document.getElementById('signup-form').addEventListener('submit', function (event) {
		event.preventDefault();
		formData += 'email=' + encodeURIComponent(document.getElementById('email').value);
		formData += '&password=' + encodeURIComponent(document.getElementById('password').value);
		formData += '&name=' + encodeURIComponent(document.getElementById('name').value);
		submitForm(formData);
		formData = '';
	});

</script>